<br/>
<p style="font-weight: bold; font-size: 30px">@ViewBag.ResultValue</p>
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>Start Page</title>
	<meta charset="utf-8" />
    <script src="../Scripts/jquery-3.2.1.js"></script>
    <script src="../Scripts/jquery-3.2.1.min.js"></script>
</head>
<body>
    <div>

        <input type="text" id="text-result" />

        <input type="button" id="button-get" onclick="getResult()" value="GET" />
        <input type="button" id="button-post" onclick="postResult()" value="POST" />
        <input type="button" id="button-put" onclick="putResult()" value="PUT" />
        <input type="button" id="button-delete" onclick="deleteResult()" value="DELETE" />

        <p id="result-field"></p>

    </div>

    <script>
        function getResult() {
            $.ajax({
                url: "https://localhost:44386/api/values",
                type: "GET",
                success: result => {
                    $("#result-field").html(JSON.stringify(result));
                },
                error: (error) => {
                    console.log(error);
                }
            })
        }

        function postResult() {
            let res = $("#text-result").val();
            $.ajax({
                url: `https://localhost:44386/api/values?result=${res}`,
                type: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                success: result => {
                    $("#result-field").html(JSON.stringify(result));
                },
                error: (error) => {
                    console.log(error);
                }
            })
        }

        function putResult() {
            let res = $("#text-result").val();
            $.ajax({
            url: `https://localhost:44386/api/values?add=${res}`,
                type: "PUT",
                headers: {
                    "Content-Type": "application/json"
                },
                success: result => {
                    $("#result-field").html(JSON.stringify(result));
                },
                error: (error) => {
                    console.log(error);
                }
            })
        }

        function deleteResult() {
            $.ajax({
                url: "https://localhost:44386/api/values",
                type: "DELETE",
                success: result => {
                    $("#result-field").html(JSON.stringify(result));
                },
                error: (error) => {
                    console.log(error);
                }
            })
        }
    </script>

</body>
</html>
